<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="100dp"
    android:background="@drawable/btn_background"
    android:backgroundTint="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/text_menu_top"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.16"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/text_delete_check_top"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.72"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/text_delete_check_bottom"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.93"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/text_menu_left"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.025"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/text_back_left"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.703"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/text_back_right"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.796"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/text_delete_check_left"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.84"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/text_delete_check_right"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.93"/>

    <TextView
        android:id="@+id/text_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="엽기메뉴"
        android:textColor="@color/black"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/text_menu_top"
        app:layout_constraintStart_toStartOf="@id/text_menu_left"/>

    <TextView
        android:id="@+id/text_delete_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="를 삭제하시겠습니까?"
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintTop_toTopOf="@id/text_menu_top"
        app:layout_constraintStart_toEndOf="@id/text_menu"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/text_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취소"
        android:textColor="#913AFF"
        android:textSize="14dp"
        app:layout_constraintTop_toTopOf="@id/text_delete_check_top"
        app:layout_constraintBottom_toBottomOf="@id/text_delete_check_bottom"
        app:layout_constraintStart_toStartOf="@id/text_back_left"
        app:layout_constraintEnd_toEndOf="@id/text_back_right"/>

    <TextView
        android:id="@+id/text_delete_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        android:textColor="#913AFF"
        android:textSize="14dp"
        app:layout_constraintTop_toTopOf="@id/text_delete_check_top"
        app:layout_constraintBottom_toBottomOf="@id/text_delete_check_bottom"
        app:layout_constraintEnd_toEndOf="@id/text_delete_check_right"
        app:layout_constraintStart_toStartOf="@id/text_delete_check_left"/>

</androidx.constraintlayout.widget.ConstraintLayout>