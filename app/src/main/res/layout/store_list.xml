<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="328dp"
    android:layout_height="98dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/storelist_background"
    android:elevation="10dp"
    android:layout_marginTop="20dp">

    <!-- 메뉴 이미지 -->
    <ImageView
        android:id="@+id/menu_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/menu_img_guideline_start"
        app:layout_constraintEnd_toEndOf="@id/menu_img_guideline_end"
        app:layout_constraintTop_toTopOf="@id/menu_img_guideline_top"
        app:layout_constraintBottom_toBottomOf="@id/menu_img_guideline_bottom"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/menu_img_guideline_top"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.06"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/menu_img_guideline_bottom"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/menu_img_guideline_start"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.025"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/menu_img_guideline_end"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.284"/>

    <!-- 메뉴 이름 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/menu_name_guideline_start"
        app:layout_constraintTop_toTopOf="@id/menu_name_guideline_top"
        app:layout_constraintBottom_toBottomOf="@id/menu_name_guideline_bottom"
        android:text="엽기 떡볶이"
        android:textSize="14sp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/menu_name_guideline_top"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.17"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/menu_name_guideline_bottom"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.42"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/menu_name_guideline_start"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.357"/>


    <!-- 메뉴 설명 -->
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/menu_description_guideline_start"
        app:layout_constraintEnd_toEndOf="@id/menu_description_guideline_end"
        app:layout_constraintTop_toTopOf="@id/menu_description_guideline_top"
        android:maxLines="3"
        android:textSize="12sp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/menu_description_guideline_top"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/menu_description_guideline_start"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.357"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/menu_description_guideline_end"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.93"/>

</androidx.constraintlayout.widget.ConstraintLayout>